{
  "name": "openadp-private-notes-linux",
  "version": "1.0.0",
  "description": "Private Notes Linux PWA Client - OpenADP demonstration application",
  "main": "src/js/app.js",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "npm run preview",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "vitest run --reporter=verbose",
    "test:integration": "playwright test",
    "test:security": "npm audit && npm run test:crypto",
    "test:crypto": "node tests/security/crypto-tests.js",
    "test:watch": "vitest",
    "lint": "eslint src/**/*.{js,ts}",
    "lint:fix": "eslint src/**/*.{js,ts} --fix",
    "format": "prettier --write src/**/*.{js,ts,css,html}",
    "format:check": "prettier --check src/**/*.{js,ts,css,html}",
    "deploy": "npm run build && gh-pages -d dist",
    "analyze": "npm run build && npx vite-bundle-analyzer dist",
    "clean": "rm -rf dist node_modules/.vite"
  },
  "keywords": [
    "openadp",
    "distributed-cryptography",
    "pwa",
    "notes",
    "encryption",
    "privacy",
    "demo",
    "threshold-cryptography"
  ],
  "author": "OpenADP Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/openadp/openadp.git",
    "directory": "demos/private-notes/linux-client"
  },
  "bugs": {
    "url": "https://github.com/openadp/openadp/issues"
  },
  "homepage": "https://private-notes.openadp.org",
  "dependencies": {
    "idb": "^7.1.1",
    "uuid": "^9.0.1",
    "dompurify": "^3.0.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/uuid": "^9.0.7",
    "@types/dompurify": "^3.0.5",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^1.7.1",
    "gh-pages": "^6.1.0",
    "husky": "^8.0.3",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.0",
    "vite": "^5.0.8",
    "vite-plugin-pwa": "^0.17.4",
    "vitest": "^1.0.4",
    "workbox-window": "^7.0.0"
  },
  "lint-staged": {
    "*.{js,ts,css,html}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not op_mini all"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "volta": {
    "node": "18.19.0",
    "npm": "10.2.3"
  }
} 